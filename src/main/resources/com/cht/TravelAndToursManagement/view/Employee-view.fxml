<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="contentArea" prefHeight="504.0" prefWidth="805.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- LEFT SIDEBAR -->


    <!-- MAIN CONTENT -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>
                <VBox prefHeight="50.0" prefWidth="639.0">
                    <children>
                        <Label text="Employee Dashboard">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Manage and monitor your team member"/>
                    </children>
                </VBox>

                <!-- Password -->
                <VBox spacing="4"/>

                <!-- Checkboxes -->
                <HBox spacing="20"/>
                <VBox prefHeight="107.0" prefWidth="363.0">
                    <children>
                        <HBox prefHeight="60.0" prefWidth="620.0">
                            <children>
                                <HBox prefHeight="60.0" prefWidth="636.0" spacing="10.0">
                                    <children>
                                        <AnchorPane prefHeight="200.0" prefWidth="185.0"
                                                    style="-fx-background-color: #1976d2;">
                                            <children>
                                                <Text fill="WHITE" layoutX="49.0" layoutY="27.0" strokeType="OUTSIDE"
                                                      strokeWidth="0.0" text="Total Employee">
                                                    <font>
                                                        <Font name="System Bold" size="12.0"/>
                                                    </font>
                                                </Text>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane prefHeight="55.0" prefWidth="207.0"
                                                    style="-fx-background-color: #1976d2;">
                                            <children>
                                                <Text fill="WHITE" layoutX="57.0" layoutY="27.0" strokeType="OUTSIDE"
                                                      strokeWidth="0.0" text="Active Employee">
                                                    <font>
                                                        <Font name="System Bold" size="12.0"/>
                                                    </font>
                                                </Text>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane prefHeight="200.0" prefWidth="200.0"
                                                    style="-fx-background-color: #1976d2;">
                                            <children>
                                                <Text fill="WHITE" layoutX="72.0" layoutY="27.0" strokeType="OUTSIDE"
                                                      strokeWidth="0.0" text="Managers">
                                                    <font>
                                                        <Font name="System Bold" size="12.0"/>
                                                    </font>
                                                </Text>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="10"/>
                <HBox>
                    <children>
                        <TextField prefHeight="38.0" prefWidth="520.0" text="Search, by name, email or contacts..."/>

                        <Button fx:id="saveButton" prefWidth="120"
                                style="-fx-background-color: #1976d2; -fx-text-fill: white;" text="+ Add Employee"/>
                    </children>
                </HBox>

                <TableView fx:id="TableContainer" prefHeight="316.0" prefWidth="639.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="150" text="Name"/>
                        <TableColumn fx:id="colEmail" prefWidth="150" text="Email"/>
                        <TableColumn fx:id="colContact" prefWidth="120" text="Contact No."/>
                        <TableColumn fx:id="colManager" prefWidth="80" text="Is Manager"/>
                        <TableColumn fx:id="colActive" prefWidth="80" text="Is Active"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>

    </center>

</BorderPane>
