                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Navigation -->
    <center>
        <VBox spacing="4" styleClass="menu">
            <Button text="Dashboard"/>
            <Button text="New Booking"/>
            <Button text="Customer Records"/>
            <Button text="Tour Packages"/>
            <Button text="Hotels"/>
            <Button text="Transportation"/>
            <Button text="Payments"/>
            <Button text="Reports"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox spacing="10" styleClass="sidebar-footer">

            <!-- Profile -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <StackPane styleClass="avatar">
                    <Label styleClass="avatar-text" text="SJ"/>
                </StackPane>
                <VBox fx:id="profileBox">
                    <Label styleClass="profile-name" text="Sarah Johnson"/>
                    <Label styleClass="profile-role" text="Travel Agent"/>
                </VBox>
            </HBox>

            <!-- Collapse Button -->
            <Button styleClass="collapse-btn" text="âŸ¨ Collapse" onAction="#toggleSidebar"/>
