<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="contentArea" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cht.TravelAndToursManagement.client.controller.AuthController">
    <center>

        <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Label fx:id="label2" prefHeight="110.0" prefWidth="218.0"
                                       text="CHT Travel &amp; Tours Management System" textAlignment="CENTER"
                                       wrapText="true">
                                    <font>
                                        <Font size="23.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="40.0" style="-fx-border-color: black;">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label fx:id="loginMessageLabel" alignment="TOP_CENTER" contentDisplay="CENTER"
                                               prefHeight="18.0" prefWidth="244.0" textAlignment="CENTER"
                                               textFill="RED"/>
                                        <VBox spacing="20.0">
                                            <children>
                                                <VBox>
                                                    <children>
                                                        <Label fx:id="label1" text="Username">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="usernameTextField" prefHeight="25.0"
                                                                   prefWidth="155.0" promptText="Enter username"/>
                                                    </children>
                                                </VBox>
                                                <VBox>
                                                    <children>
                                                        <Label fx:id="label11" text="Password">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                        </Label>
                                                        <PasswordField fx:id="passwordPasswordField"
                                                                       promptText="Enter password"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                                <VBox spacing="20.0">
                                    <children>
                                        <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER"
                                                mnemonicParsing="false" onAction="#loginButton" prefHeight="25.0"
                                                prefWidth="255.0" text="LOGIN" textAlignment="CENTER"/>
                                        <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER"
                                                maxWidth="255.0" mnemonicParsing="false" onAction="#cancelButton"
                                                text="CANCEL" textAlignment="CENTER"/>
                                    </children>
                                </VBox>
                                <HBox alignment="CENTER" spacing="60.0">
                                    <children>
                                        <Label text="No account?"/>
                                        <Button fx:id="createAccountButton" mnemonicParsing="false"
                                                text="Create Account" onAction="#createAccountButton"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="30.0" left="40.0" right="40.0" top="20.0"/>
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </padding>
                </VBox>
            </children>
        </FlowPane>
    </center>
</BorderPane>
